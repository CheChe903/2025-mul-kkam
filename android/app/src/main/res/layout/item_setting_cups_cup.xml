<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    android:foreground="@drawable/bg_common_rectangle_stroke_8dp">

    <LinearLayout
        android:id="@+id/ll_setting_water_cup_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_setting_water_cup_tag_representative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_common_rectangle_4dp"
            android:backgroundTint="@color/gray_400"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@string/setting_cups_default"
            android:textAppearance="@style/label2"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_setting_water_cup_tag_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_rectangle_4dp"
            android:backgroundTint="@color/primary_200"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@string/setting_cups_label_water"
            android:textAppearance="@style/label2"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_setting_water_cup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_setting_water_cup_tag"
        tools:text="우리집 물컵" />

    <TextView
        android:id="@+id/tv_setting_water_cup_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="@string/setting_cups_increment"
        android:textAppearance="@style/body4"
        android:textColor="@color/primary_200"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_water_cup_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_water_cup_name"
        tools:text="+ 200ml" />

    <TextView
        android:id="@+id/tv_setting_water_cup_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_common_rectangle_bottom_8dp"
        android:backgroundTint="@color/gray_400"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:text="@string/setting_cups_edit"
        android:textAppearance="@style/body4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_water_cup_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
